style.
  .dropdown-item:hover{
  background:linear-gradient(90deg, rgba(92, 92, 214) 0%, rgba(229,46,100,1) 100%) !important;
  }

#wrapper.d-flex
  #sidebar-wrapper
    #menu-toggle.sidebar-toggler
      i.fas.fa-bars
    .sidebar-header
      img.sidebar-header-img(src=userProfile.displayAvatarURL({dynamic: true}))
      h4#fat.mb-0 #{req.user.username}
    .list-group.list-group-flush
     center
      a.list-group-item(href='/add')
        i.fad.fa-user-plus
        |  Add Bot
      // a.list-group-item(href='/user/edit')
      //   i.fad.fa-user-cog.text-info.mr-1
      //   |  Settings
      hr
      a.list-group-item(href='/logout')
        i.fad.fa-sign-out-alt
        |  Logout
  #page-content-wrapper

    .bg-dark.hugething.text-center(style='box-shadow:0 5px 10px #1b1b1b;')
      br
      br
      img.bot-img(src=userProfile.displayAvatarURL({dynamic: true}) )
      br
      h3#fat.mb-0 Welcome to your dashboard #{req.user.username}!
      br
      br
      br
    br
    .conatainer
    <center>
    each val, i in cards
     .card.botcard(style=`transform: translate(0px, 0px); opacity: 1;`)
      .card-body.p-3.pb-2.botcard-hassplash(style=`border-radius: 4px 4px 0px 0px; background: linear-gradient(rgba(48, 48, 48, 0.3) 50%, rgb(48, 48, 48) 98%), url("${val.banner}");`)
         img.cardimg(style='width:130px;height:130px; border-radius:50%;', alt='Bot Avatar', src=val.logo, loading='lazy', draggable='false')
      .card-body.pt-0.pb-0
        .w-100
          .botcount.mb-2.text-damp.text-bold(data-toggle='tooltip', data-placement='left', title='', data-original-title='Votes This Month')
            span.float-left.text-white.h-100
              i.fas.fa-star.pt-1.pb-1
            | #{val.likes || 0}
          .w-100
        .card-body.pt-0.pb-0
          h4.mb-0.text-center.pt-1
            | #{val.username}  
            span.certifiedbadge(data-toggle='tooltip', title='', data-original-title='Certified Bot')
              i.fas.fa-check-circle
          p.mb-2.text-center.text-muted.botdesc #{val.description}
      hr.mt-1.mb-3.bg-secondary
      .card-body.pt-0.botcard-btnholder
        .btn-group.btn-sm
          a.btn.btn-sm.btn-secondary(style='width:50%;', href=`https://discord.com/oauth2/authorize?client_id=${val.botid}&scope=bot&permissions=0`)  Invite Bot
        .btn-group.btn-sm
          a.btn.btn-sm.btn-blue(style='width:50%;', href=`/bots/${val.botid}/`) View Bot
        hr.mt-1.mb-3.bg-secondary
        .card-body.pt-0.botcard-btnholder
           a.btn.btn-sm.btn-blue.btn-block(style='border-left:1px solid #2B2B2B; width:100%;', href=`/bots/edit/${val.botid}`) Edit Bot
        .card-body.pt-0.botcard-btnholder
           if (val.state == "deleted")
             a.btn.btn-sm.btn-blue.btn-block(href=`/bots/resubmit/${val.botid}/`) Resubmit Bot
           else
             a.btn.btn-sm.btn-danger.btn-block.delete(href="#confirm" data-id=val.botid data-name=val.username) Delete Bot

    include ../includes/footer.pug

